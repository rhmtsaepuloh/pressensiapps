<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccentLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="listPreferredItemHeightSmall">80dp</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_white_24</item>
    </style>

    <style name="MenuTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="button_green">
        <item name="android:shadowColor">@color/gray_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn_primary">
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.MaterialComponents" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccentLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--control color-->
        <!--<item name="colorControlNormal">@color/colorPrimary</item>-->
        <!--<item name="colorControlActivated">@color/colorAccent</item>-->
        <!--<item name="colorControlHighlight">@color/colorAccentLight</item>-->
        <item name="listPreferredItemHeightSmall">80dp</item>
        <item name="homeAsUpIndicator">@drawable/ic_chevron_left</item>
    </style>

    <style name="line_radio_button">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@color/white</item>

    </style>

    <style name="line_hoz_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/btnGrey</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <!--<item name="android:background">@color/gray_btn_bg_color</item>-->

    </style>

    <style name="line_ver_button">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <!--<item name="android:background">@color/gray_btn_bg_color</item>-->

    </style>

    <style name="tab_history">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <!--<item name="android:background">@color/transparent</item>-->
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="IconNavigationMenuItem">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextNavigationMenuItem">
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCutiBodyTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_subtitle_2</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:textColor">@color/indigo_A200</item>
    </style>

    <style name="TextCutiBodyCaption" parent="TextCutiBodyTitle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textGreyDark</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <!--<style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleDelayClick">true</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>-->

    <!--Add new style-->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="AppTheme.Dialog">
        <item name="android:windowTitleStyle">@style/AppTheme.Dialog.Alert.Title</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppTheme.Dialog.Alert.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <!--    Get premium activity style-->

    <color name="blue_A400">#4d73ff</color>

    <color name="gray_forgotpass">#eaeff3</color>
    <color name="gray_text">#979797</color>
    <color name="gray_shadow">#C2C2C2</color>

    <color name="textBottomGrey">#BEBEBE</color>


    <!--  STYLE FONT  -->
    <style name="fontSmall">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="fontNormal">
        <item name="android:textSize">23sp</item>
    </style>
    <style name="fontLarge">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="poppinsRegular" parent="fontNormal">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="poppinsRegularSmall" parent="fontSmall">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="poppinsBold" parent="fontNormal">
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="poppinsLargeBold" parent="fontLarge">
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    //clickable
    <style name="clickableBackgroundBorderless">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="clickableBackgroundBorder">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="clickableBorderless">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="clickableBorder">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

</resources>